<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>

	<constant name="struts.custom.i18n.resources" value="mess" />

	<package name="struts2_test" extends="struts-default">
		<action name="regist" class="com.wanshu.action.RegistAction">
			<result name="error">/error.jsp</result>
			<result name="success">/JSP/LoginSuccess.jsp</result>
		</action>
		<action name="login" class="com.wanshu.action.LoginAction">
			<result name="error">/error.jsp</result>
			<result name="success">/JSP/LoginSuccess.jsp</result>
			<result name="personal">/JSP/functionList.jsp</result>
		</action>
		<action name="findAllMembers" class="com.wanshu.action.FindAllMembersAction">
			<result name="success">/JSP/EditInformation.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		<action name="findAllAccounts" class="com.wanshu.action.FindAllAccountsAction">
			<result name="success">/JSP/KeepAccount.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		<action name="findAllAccountsForReport" class="com.wanshu.action.FindAllAccountsAction">
			<result name="success">/JSP/ExportReport.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		<action name="modifyuser" class="com.wanshu.action.ModifyUserAction">
			<result name="findmembers" type="redirectAction">
				<param name="actionName">findAllMembers</param>
			</result>
			<result name="addmodify">/JSP/AddModifyUser.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		
		<action name="showuser_*" class="com.wanshu.action.ModifyUserAction" method="{1}">
			
		</action>
		
		<action name="showaccount_*" class="com.wanshu.action.AddAccountAction" method="{1}">
			
		</action>
		<action name="findaccount_*" class="com.wanshu.action.AddAccountAction" method="{1}">
			
		</action>
		
		
		
		<action name="addAccount" class="com.wanshu.action.AddAccountAction">
			<result name="add">/JSP/AddAccounts.jsp</result>
			<result name="findAllAccounts" type="redirectAction">
				<param name="actionName">findAllAccounts</param>
			</result>
		</action>
		<action name="findAccountDetails" class="com.wanshu.action.FindAccountDetailsAction">
			<result name="findAccountDetails">/JSP/AccountDetailList.jsp</result>
		</action>
		<action name="findAccountDetailsForReport" class="com.wanshu.action.FindAccountDetailsAction">
			<result name="findAccountDetails">/JSP/AccountDetailListForReport.jsp</result>
		</action>
		<action name="accountDetail" class="com.wanshu.action.AccountDetailAction">
			<result name="add">/JSP/AddAccountDetail.jsp</result>
			<result name="findAccountDetails" type="redirectAction">
				<param name="actionName">findAccountDetails</param>
				<param name="accountid">${accountid}</param>
				<param name="adid">${detail_id}</param>
			</result>
		</action>
		 <action name="outPut" class="com.wanshu.action.OutAction">  
            <result>/JSP/OutExcel.jsp</result>  
        </action> 
	</package>
</struts>
